{
  "name": "@certrialabs/authz",
  "version": "1.0.2",
  "description": "A simple authorization framework for nodejs inspired by ruby pundit gem.",
  "main": "index.js",
  "scripts": {
    "test": "standard index.js && node run-tests.js",
    "lint": "standard index.js",
    "fix-lint": "standard --fix index.js",
    "ci:version-bump": "npm --no-git-tag-version version patch",
    "ci:prepare-package": "rm -rf dist && mkdir dist && cp index.js dist && cp package.json dist && cp LICENSE dist",
    "ci:publish": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/certrialabs/authz.git"
  },
  "keywords": [
    "node",
    "authorization",
    "simple"
  ],
  "author": "Kiril Kalchev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/certrialabs/authz/issues"
  },
  "homepage": "https://github.com/certrialabs/authz#readme",
  "dependencies": {
    "harmony-reflect": "^1.6.2"
  },
  "devDependencies": {
    "mocha": "^9.1.2",
    "nyc": "^15.1.0",
    "standard": "^11.0.1"
  }
}
